{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2018",
    "lib": ["es2018",],
    "outDir": "dist",
    "sourceMap": false,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "declaration": true,
  },
  "include": [
    "src/**/*"
  ]
}
